module contagem_pessoas(
    input btn_add,       // Botão para aumentar a capacidade
    input btn_sub,       // Botão para diminuir a capacidade
    input clock,         // Clock para sincronização
    input reset,         // Reset para inicializar a contagem
    output [1:0] capacidade_atual  // Capacidade atual (2 bits)
);

    wire capacidade_add, capacidade_sub;
    wire [1:0] capacidade_temp;

    // Flip-flops para armazenar a capacidade atual (2 bits)
    FF_d FF0(capacidade_temp[0], clock, capacidade_add);  // Flip-flop para o bit menos significativo
    FF_d FF1(capacidade_temp[1], clock, capacidade_sub);  // Flip-flop para o bit mais significativo

    // Lógica para aumentar a capacidade
    // A capacidade aumenta se btn_add for pressionado e a capacidade for menor que 3
    and and_add(capacidade_add, btn_add, ~(capacidade_temp[0] & capacidade_temp[1])); // Capacidade < 3

    // Lógica para diminuir a capacidade
    // A capacidade diminui se btn_sub for pressionado e a capacidade for maior que 0
    and and_sub(capacidade_sub, btn_sub, |capacidade_temp); // Capacidade > 0

    // A capacidade final será a saída dos flip-flops
    assign capacidade_atual = capacidade_temp;

endmodule
